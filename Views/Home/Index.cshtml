@model RobustEcommerceApp.Models.HomeViewModel

@{
    ViewData["Title"] = "Home";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEJ3Q3gJk6zSxkA5W8g32n82e/d25n4jHqt/dOTI5f06Vj1n0nFx5J0Jt2hw2" crossorigin="anonymous">
</head>
<body>

    <!-- Main Hero Section -->
    <div class="container mt-5">
        <div class="row justify-content-center text-center">
            <div class="col-md-8">
                <h1>Welcome to Our E-commerce App</h1>
                <p class="lead">Explore our amazing range of products and shop your favorites.</p>
                <a href="@Url.Action("Index", "Product")" class="btn btn-primary btn-lg">Browse Products</a>
            </div>
        </div>
    </div>

    <!-- Featured Products Section -->
    <div class="container mt-5">
        <h2 class="text-center mb-4">Featured Products</h2>
        <div class="row">
            @if (Model != null && Model.FeaturedProducts != null)
            {
                @foreach (var product in Model.FeaturedProducts)
                {
                    <div class="col-md-4">
                        <div class="card mb-4">
                            <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name">
                            <div class="card-body">
                                <h5 class="card-title">@product.Name</h5>
                                <p class="card-text">@product.Description</p>
                                <p class="card-text text-muted">@product.Price.ToString("C2")</p>
                                <a href="@Url.Action("Details", "Product", new { id = product.Id })" class="btn btn-outline-primary">View Details</a>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <p>No featured products available.</p>
            }
        </div>
    </div>

</body>
</html>
