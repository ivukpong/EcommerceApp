@model IEnumerable<RobustEcommerceApp.Models.Product>

<h1>Product List</h1>

<table class="table table-striped">
    <thead class="thead-light">
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="align-middle">
                <td class="text-center">
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" alt="@item.Name" class="img-fluid rounded" style="max-width: 100px; height: auto;" />
                    }
                    else
                    {
                        <span>No Image</span>
                    }
                </td>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>@item.Price.ToString("C2")</td>
                <td>
                    <a href="@Url.Action("Details", "Product", new { id = item.Id })" class="btn btn-info btn-sm mb-1">View</a>
                    <a href="@Url.Action("Edit", "Product", new { id = item.Id })" class="btn btn-warning btn-sm mb-1">Edit</a>
                    <a href="@Url.Action("Delete", "Product", new { id = item.Id })" class="btn btn-danger btn-sm mb-1">Delete</a>
                    <form asp-controller="Cart" asp-action="AddToCart" asp-route-productId="@item.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-success btn-sm">Add to Cart</button>
                    </form>
                </td>
            </tr>

        }
    </tbody>
</table>

<a href="@Url.Action("Create", "Product")" class="btn btn-primary">Create New Product</a>
